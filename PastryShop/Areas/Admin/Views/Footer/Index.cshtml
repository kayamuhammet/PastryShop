@model PastryShop.Models.Footer

@{
    ViewData["Title"] = "Footer";
}

<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>FOOTER AYARLARI</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                            <li class="breadcrumb-item active">Footer</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">FOOTER BİLGİLERİ</strong>
                    </div>
                    <div class="card-body">
                        <form asp-action="Save" method="post">
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="form-group">
                                <label asp-for="CompanyName">Şirket Adı</label>
                                <input asp-for="CompanyName" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">Adres</label>
                                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone">Telefon</label>
                                <input asp-for="Phone" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" type="email" />
                            </div>

                            <div class="form-group">
                                <label asp-for="WorkingDays">Çalışma Günleri</label>
                                <input asp-for="WorkingDays" class="form-control" placeholder="Örn: Pazartesi - Cumartesi" />
                            </div>

                            <div class="form-group">
                                <label asp-for="OpeningTime">Açılış Saati</label>
                                <input asp-for="OpeningTime" class="form-control" type="time" />
                            </div>

                            <div class="form-group">
                                <label asp-for="ClosingTime">Kapanış Saati</label>
                                <input asp-for="ClosingTime" class="form-control" type="time" />
                            </div>

                            <div class="form-group">
                                <label asp-for="FacebookUrl">Facebook URL</label>
                                <input asp-for="FacebookUrl" class="form-control" type="url" placeholder="https://facebook.com/..." />
                            </div>

                            <div class="form-group">
                                <label asp-for="InstagramUrl">Instagram URL</label>
                                <input asp-for="InstagramUrl" class="form-control" type="url" placeholder="https://instagram.com/..." />
                            </div>

                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-success">
                                    <i class="fa fa-save"></i> Kaydet
                                </button>
                                @if (Model != null && Model.Id > 0)
                                {
                                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                        <i class="fa fa-trash"></i> Sil
                                    </a>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>