@model PastryShop.Models.ViewModels.LoginViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Giriş Yap";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <img src="~/admin-template/images/pastane_logo.jpg" alt="Pastane Logo" class="img-fluid mb-3" style="max-height: 150px;" />
            <h2 class="fw-bold text-success">Giriş Yap</h2>
            <p class="text-muted">Hesabınıza erişmek için bilgilerinizi giriniz.</p>
            <hr class="w-25 mx-auto">
        </div>

        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">E-posta Adresi</label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi giriniz" />
                <label asp-for="Password">Şifre</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Beni Hatırla</label>
            </div>

            <button type="submit" class="btn btn-success w-100">Giriş Yap</button>

            <div class="text-center mt-3">
                <small>Hesabınız yok mu? <a asp-action="Register" class="text-decoration-none">Kayıt Ol</a></small>
            </div>
        </form>
    </div>
</div>
