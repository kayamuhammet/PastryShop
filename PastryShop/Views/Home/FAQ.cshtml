@model List<PastryShop.Models.FAQ>

<!-- book section -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="row  d-flex justify-content-center">
            <div class="col-md-8">
                <div class="faq_containe"
                    style="border: 2px solid #ff6b6b; border-radius: 15px; padding: 30px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                    <h3 class="mb-4" style="color: #ff4757; font-weight: 600; text-align: center; margin-bottom: 25px;">
                        Sıkça Sorulan Sorular</h3>
                    <div class="accordion" id="faqAccordion">
                        @foreach (var faq in Model)
                        {
                            <div class="card" style="border: none; margin-bottom: 15px; background: transparent;">
                                <div class="card-header p-0" id="heading@(faq.Id)"
                                    style="background: transparent; border: none;">
                                    <h3 class="mb-0">
                                        <button class="btn btn-link btn-block text-left" type="button"
                                            data-toggle="collapse" data-target="#collapse@(faq.Id)"
                                            style="color: #2f3542; font-weight: 500; text-decoration: none; padding: 15px; background: #fff5f5; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); font-weight: 800">
                                            <i class="fa fa-question-circle"
                                                style="color: #ff6b6b; margin-right: 10px;"></i>
                                            @faq.Question
                                        </button>
                                    </h3>
                                </div>
                                <div id="collapse@(faq.Id)" class="collapse" aria-labelledby="heading@(faq.Id)"
                                    data-parent="#faqAccordion">
                                    <div class="card-body"
                                        style="background: white; margin-top: 10px; border-radius: 8px; padding: 15px; color: #57606f; margin-left: 10px;">
                                        <i class="fa fa-chevron-circle-right"
                                            style="color: #01ff2b; margin-right: 10px;"></i>@faq.Answer
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end book section -->